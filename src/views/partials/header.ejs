<header>
    <div class="d-headercontent">
        <div class="d-header-brand">
            <a href="/"><img class="d-header-logo" src="/img/FULL GAMER.png" alt="FULL GAMER"></a>
        </div>

        <div class="d-header-searchbar">
            <input id="buscar" placeholder="Buscar productos..." type="text"><button class="botonlupa"><i id="lupa" class="fas fa-search"></i></button></li>
        </div>

        <div class="d-header-shoppingcart">
            <a href="/products/carrito"><i id="carrito" class="fas fa-shopping-cart"></i></a>
            <span class="products-in-cart"></span>
        </div>

        <% if(locals && locals.session && locals.session !== null && locals.session !== undefined) { %>
        <div class="user-profile">
            <div class="user">
                <img src="/img/users/<%= locals.session.image %>" alt="Imagen usuario" class="user-image">
                <p><%= locals.session.user %></p>
                <i class="fas fa-sort-down down-arrow"></i>
                <span class="options">
                    <a class="profile">Ver perfil</a>
                    <p class="destroy-session">Cerrar sesi√≥n</p>
                </span>
            </div>
        </div>
        <% } else { %>
        <div class="d-header-login">
            <a id="login" href="/users/login">Login</a>
        </div>
        <% } %>
    </div>

    <script src="/js/userDisplay.js"></script>
</header>