<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head.ejs') %>
        <link rel="stylesheet" href="/css/userProfile.css">
        <title></title>
</head>

<body>

    <%- include('./partials/header.ejs') %>

        <main>
            <form action="/edit/<%= user.id %>" class="container">
                <img src="/img/users/user-default.jpg" alt="Imagen usuario" class="user-image">
                <div class="input-container">
                    <label for="user">Usuario</label>
                    <div class="edit">
                        <input type="text" name="user" value="<%= user.user %>" class="input" disabled>
                        <i class="fas fa-pen pencil"></i>
                    </div>
                </div>
                <div class="input-container">
                    <label for="email">Email</label>
                    <div class="edit">
                        <input type="email" name="email" value="<%= user.email %>" class="input" disabled>
                        <i class="fas fa-pen pencil"></i>
                    </div>
                </div>
                <p class="change-password">Cambiar contraseÃ±a</p>
                <button type="submit" class="save">Guardar</button>
            </form>
        </main>

        <%- include('./partials/footer.ejs') %>

</body>

</html>