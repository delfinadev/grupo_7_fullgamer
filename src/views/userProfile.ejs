<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head.ejs') %>
        <link rel="stylesheet" href="/css/userProfile.css">
        <title></title>
</head>

<body>

    <%- include('./partials/header.ejs') %>

        <main>
            <div class="container">
                <form action="/users/edit/<%= user.id %>?_method=PUT" method="POST" id="form" enctype="multipart/form-data">
                    <div class="image-container">
                        <img src="/img/users/<%= user.image %>" alt="Imagen usuario" class="image" id="user-image">
                        <label for="image" class="image-label"><i class="fas fa-camera"></i></label>
                        <input type="file" accept="jpg, png, gif, svg" name="image" id="image" class="image-input">
                    </div>
                    <div class="input-container">
                        <label for="user">Usuario</label>
                        <div class="edit">
                            <input type="text" name="name" id="name" value="<%= user.user %>" class="input" disabled>
                            <i class="fas fa-pen pencil"></i>
                        </div>
                    </div>
                    <div class="input-container">
                        <label for="email">Email</label>
                        <div class="edit">
                            <input type="email" name="email" id="email" value="<%= user.email %>" class="input" disabled>
                            <i class="fas fa-pen pencil"></i>
                        </div>
                    </div>
                    <p class="change-password">Cambiar contraseÃ±a</p>
                    <div class="button-container">
                        <button type="submit" class="button">Guardar</button>
                    </div>
                </form>
                <form action="/users/destroy/<%= user.id %>?_method=DELETE" method="POST" class="button-container">
                    <button type="submit" class="button">Eliminar cuenta</button>
                </form>
            </div>
            </div>
        </main>

        <%- include('./partials/footer.ejs') %>

</body>

<script src="/js/editUser.js"></script>

</html>